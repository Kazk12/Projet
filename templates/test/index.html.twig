{% extends 'base.html.twig' %}

{% block title %}Bibliocritique | Découvrez les avis littéraires{% endblock %}

{% block body %}

    {% if books is not empty %}
        <h2>Derniers livres</h2>
        <ul>
            {% for book in books %}
                <li>{{ book.title }} - {{ book.author }}</li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Aucun livre trouvé.</p>
    {% endif %}
{% endblock %}
