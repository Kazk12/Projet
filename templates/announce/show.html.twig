{% extends 'base.html.twig' %}

{% block title %}Détails de l'annonce
{% endblock %}

{% block body %}
	<div class="min-h-screen bg-gray-100 py-6 px-4 sm:px-6 lg:px-8">
		<div
			class="max-w-3xl mx-auto">
			{# Card principale #}
			<div
				class="bg-white shadow-sm rounded-lg overflow-hidden">
				{# En-tête #}
				<div class="border-b border-gray-200 bg-gray-50 px-4 py-5 sm:px-6">
					<div class="flex justify-between items-center">
						<h1 class="text-xl font-semibold text-gray-900">Détails de l'annonce</h1>
						<div class="inline-flex items-center space-x-1">
							{% for i in 1..5 %}
								{% if i <= announce.rate %}

									<svg class="w-6 h-6 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24" fill="currentColor">
										<path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd"/>
									</svg>
								{% else %}

									<svg class="w-6 h-6 text-gray-300" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
									</svg>
								{% endif %}
							{% endfor %}
						</div>
					</div>
				</div>

				{# Contenu principal #}
				<div class="px-4 py-5 sm:p-6">
					{% if announce.imageUrl %}
						<div class="mb-6">
							<img src="{{ vich_uploader_asset(announce, 'thumbnailFile') }}" alt="Image de l'annonce" class="w-full h-64 object-cover rounded-lg">
						</div>
					{% endif %}

					<dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
						<div class="sm:col-span-2">
							<dt class="text-sm font-medium text-gray-500">Contenu</dt>
							<dd class="mt-1 text-base text-gray-900">{{ announce.content }}</dd>
						</div>

						<div>
							<dt class="text-sm font-medium text-gray-500">Créé le</dt>
							<dd class="mt-1 text-sm text-gray-900">
								{{ announce.createdAt ? announce.createdAt|date('d/m/Y H:i') : '' }}
							</dd>
						</div>

						<div>
							<dt class="text-sm font-medium text-gray-500">Mis à jour le</dt>
							<dd class="mt-1 text-sm text-gray-900">
								{{ announce.updatedAt ? announce.updatedAt|date('d/m/Y H:i') : '' }}
							</dd>
						</div>
					</dl>
				</div>

				{# Actions #}
				<div class="px-4 py-4 sm:px-6 bg-gray-50 border-t border-gray-200">
					<div class="flex justify-between items-center">
						<a href="{{ referer }}" class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
							<svg class="h-5 w-5 mr-2 -ml-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
							</svg>
							Retour
						</a>
						<div class="flex space-x-3">
							<a href="{{ path('app_announce_edit', {'id': announce.id}) }}" class="inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
								Modifier
							</a>
							{{ include('announce/_delete_form.html.twig') }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
