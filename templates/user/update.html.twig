{% extends 'base.html.twig' %}

{% block title %}Update Profile{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8">
            <div>
                <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                    Update your profile
                </h2>
                {% for message in app.flashes('success') %}
                    <div class="mt-2 text-center text-sm text-green-600">
                        {{ message }}
                    </div>
                {% endfor %}
            </div>
            {{ form_start(updateForm, {'attr': {'class': 'mt-8 space-y-6'}}) }}
                <div class="rounded-md shadow-sm -space-y-px">
                    <div>
                        {{ form_label(updateForm.email, null, {'label_attr': {'class': 'sr-only'}}) }}
                        {{ form_widget(updateForm.email, {'attr': {'class': 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm', 'placeholder': 'Email address', 'value': app.user.email}}) }}
                    </div>
                    <div>
                        {{ form_label(updateForm.pseudo, null, {'label_attr': {'class': 'sr-only'}}) }}
                        {{ form_widget(updateForm.pseudo, {'attr': {'class': 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm', 'placeholder': 'Pseudo', 'value': app.user.pseudo}}) }}
                    </div>
                    <div>
                        {{ form_label(updateForm.plainPassword.first, null, {'label_attr': {'class': 'sr-only'}}) }}
                        {{ form_widget(updateForm.plainPassword.first, {'attr': {'class': 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm', 'placeholder': 'Password'}}) }}
                    </div>
                    <div>
                        {{ form_label(updateForm.plainPassword.second, null, {'label_attr': {'class': 'sr-only'}}) }}
                        {{ form_widget(updateForm.plainPassword.second, {'attr': {'class': 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm', 'placeholder': 'Repeat Password'}}) }}
                    </div>
                </div>
                <div>
                    <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Update
                    </button>
                </div>
            {{ form_end(updateForm) }}
        </div>
    </div>
{% endblock %}