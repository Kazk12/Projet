
{% extends 'base.html.twig' %}

{% block title %}Vos annonces likées{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-b from-gray-50 to-gray-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
        <div class="text-center mb-12">
            <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
                <span class="block">Vos annonces</span>
                <span class="block text-indigo-600">likées</span>
            </h1>
            <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
                Retrouvez toutes les critiques littéraires que vous avez appréciées
            </p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
            {% for like in likes %}
                <article class="bg-white shadow-lg rounded-2xl overflow-hidden transform transition duration-300 hover:scale-105 hover:shadow-xl flex flex-col">
                    <div class="relative aspect-[16/9] overflow-hidden bg-gradient-to-r from-gray-50 to-gray-100">
                        {% if like.imageUrl %}
                            {# Pour les images, on utilise le chemin stocké dans imageUrl #}
                            <img src="{{ asset('images/announces/' ~ like.imageUrl) }}" alt="Couverture du livre {{ like.bookTitle }}" class="w-full h-full object-cover" loading="lazy">
                        {% else %}
                            <div class="w-full h-full flex items-center justify-center">
                                <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewbox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                                </svg>
                            </div>
                        {% endif %}
                    </div>

                    <div class="p-6 flex flex-col flex-grow">
                        <div class="flex items-start justify-between mb-4">
                            <h2 class="text-xl font-bold text-gray-900 line-clamp-2">{{ like.bookTitle }}</h2>
                            <div class="flex items-center space-x-1 ml-4">
                                {% for i in 1..5 %}
                                    {% if i <= like.rate %}
                                        <svg class="w-5 h-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24" fill="currentColor">
                                            <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd"/>
                                        </svg>
                                    {% else %}
                                        <svg class="w-5 h-5 text-gray-300" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
                                        </svg>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>

                        <p class="text-gray-600 line-clamp-3 mb-4">{{ like.content }}</p>
                        
                        <div class="mt-auto pt-4 flex items-center justify-between border-t border-gray-100">
                            <div class="flex items-center">
                                <div class="flex-shrink-0">
                                    <span class="inline-flex items-center justify-center h-8 w-8 rounded-full bg-indigo-100">
                                        <span class="text-sm font-medium leading-none text-indigo-700">
                                            {{ like.userPseudo|slice(0, 1)|upper }}
                                        </span>
                                    </span>
                                </div>
                                <div class="ml-3">
                                    <p class="text-sm font-medium text-gray-900">{{ like.userPseudo }}</p>
                                    <p class="text-xs text-gray-500">{{ like.bookAuthor }}</p>
                                </div>
                            </div>
                            <div class="flex space-x-2">
                                <a href="{{ path('app_announce_like', {'id': like.id}) }}" class="inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-gray-700 bg-gray-100 hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                    <span class="material-icons text-sm mr-1">thumb_down</span>
                                    Unlike
                                </a>
                                <a href="{{ path('app_announce_show', {'id': like.id}) }}" class="inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                    Lire plus
                                </a>
                            </div>
                        </div>
                    </div>
                </article>
            {% else %}
                <div class="col-span-full text-center py-12">
                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <h3 class="mt-2 text-sm font-medium text-gray-900">Aucune annonce likée</h3>
                    <p class="mt-1 text-sm text-gray-500">Vous n'avez pas encore liké d'annonces.</p>
                    <div class="mt-6">
                        <a href="{{ path('app_home') }}" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            Découvrir des annonces
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}