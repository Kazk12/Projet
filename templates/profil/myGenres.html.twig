{% extends 'base.html.twig' %}

{% block title %}Mes genres préférés
{% endblock %}

{% block body %}
	<div class="container mx-auto px-4 py-8">
		<div
			class="flex flex-col space-y-6">
			{# En-tête de la page #}
			<div class="flex flex-col md:flex-row justify-between items-center gap-4">
				<h1 class="text-2xl md:text-3xl font-bold text-gray-800">Mes genres préférés</h1>
				<a href="{{ path('app_home') }}" class="inline-flex items-center px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-800 rounded-md transition-colors">
					<span class="material-icons mr-2 text-sm">arrow_back</span>
					Retour
				</a>
			</div>

			{# Message si aucun genre #}
			{% if myGenres is empty %}
				<div class="flex flex-col items-center justify-center py-12 px-4 bg-gray-50 rounded-lg text-center">
					<span class="material-icons text-4xl text-gray-400 mb-4">category</span>
					<h2 class="text-xl font-medium text-gray-700 mb-2">Aucun genre préféré</h2>
					<p class="text-gray-500 mb-6">Vous n'avez pas encore sélectionné de genres favoris.</p>
					<a href="{{ path('app_genres') }}" class="inline-flex items-center px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-md transition-colors">
						<span class="material-icons mr-2 text-sm">add</span>
						Ajouter des genres
					</a>
				</div>
			{% else %}
				{# Grille des genres #}
				<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
					{% for userLikeGenre in myGenres %}
						{% set genre = userLikeGenre.genre %}
						<div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
							<div class="relative h-48 overflow-hidden">
								{% if genre.image %}
									<img src="{{ asset('images/genres/' ~ genre.image) }}" alt="{{ genre.name }}" class="w-full h-full object-cover">
								{% else %}
									<div class="w-full h-full bg-gray-200 flex items-center justify-center">
										<span class="material-icons text-4xl text-gray-400">image</span>
									</div>
								{% endif %}
							</div>
							<div class="p-5">
								<h3 class="text-xl font-semibold text-gray-800 mb-2">{{ genre.name }}</h3>
								{% if genre.description %}
									<p class="text-gray-600 text-sm mb-4 line-clamp-3">{{ genre.description }}</p>
								{% else %}
									<p class="text-gray-500 text-sm italic mb-4">Aucune description disponible</p>
								{% endif %}

								<div class="flex justify-between items-center mt-2">
									{% if genre.id %}
										<a href="{{ path('app_search', {'genre': genre.name}) }}" class="text-indigo-600 hover:text-indigo-800 text-sm font-medium">
											Voir les mangas/animes
										</a>
										<form action="{{ path('app_genre_toggle_like', {'id': genre.id}) }}" method="post" class="relative">
											<button type="submit" class="group relative inline-flex items-center p-2 text-red-600 hover:text-red-800 transition-colors rounded-full hover:bg-red-50">
												<span class="material-icons text-sm">favorite</span>
												<span class="sr-only">Retirer des favoris</span>
											</button>
										</form>
									{% endif %}
								</div>
							</div>
						</div>
					{% endfor %}
				</div>

				{# Suggestions basées sur les genres préférés #}
				<div class="mt-12">
					<h2 class="text-xl font-semibold text-gray-800 mb-6">Vous pourriez également aimer</h2>
					<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
						{% for i in 1..4 %}
							<div class="bg-gray-50 border border-gray-200 rounded-md p-4 flex items-center gap-3">
								<div class="h-10 w-10 rounded-full bg-gray-200 flex items-center justify-center">
									<span class="material-icons text-gray-400 text-sm">category</span>
								</div>
								<div>
									<h3 class="text-gray-400">Genre suggéré</h3>
									<p class="text-xs text-gray-400">Fonctionnalité à venir</p>
								</div>
							</div>
						{% endfor %}
					</div>
				</div>
			{% endif %}
		</div>
	</div>
{% endblock %}
