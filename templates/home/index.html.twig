{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
        <h1 class="text-3xl font-extrabold text-gray-900 mb-6">Annonces</h1>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for announce in pagination %}
                <div class="bg-white shadow-md rounded-lg overflow-hidden">
                    <div class="p-4">
                        <h2 class="text-xl font-bold text-gray-900">{{ announce.content }}</h2>
                        <p class="mt-2 text-gray-600">Rate: {{ announce.rate }}</p>
                        <p class="mt-2 text-gray-600">Created at: {{ announce.createdAt|date('Y-m-d H:i') }}</p>
                        <p class="mt-2 text-gray-600">Updated at: {{ announce.updatedAt|date('Y-m-d H:i') }}</p>
                        <p class="mt-2 text-gray-600">User: {{ announce.user.pseudo }}</p>
                        <p class="mt-2 text-gray-600">Book: {{ announce.book.title }}</p>
                        <div class="mt-4">
                            <a href="#" class="text-indigo-600 hover:text-indigo-500">Read more</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="mt-6">
          {{ knp_pagination_render(pagination, 'pagination/custom_pagination.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}