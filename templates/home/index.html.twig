{% extends 'base.html.twig' %}

{% block title %}Bibliocritique | Découvrez les avis littéraires{% endblock %}

{% block body %}
<div class="min-h-screen bg-white">
    <!-- En-tête héroïque -->
    <div class="relative bg-gray-50 overflow-hidden">
        <div class="absolute inset-0">
            <div class="absolute inset-0 bg-gradient-to-r from-gray-100 to-gray-50"></div>
        </div>
        <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 sm:py-24">
            <div class="text-center">
                <h1 class="text-4xl font-extrabold tracking-tight text-gray-900 sm:text-5xl md:text-6xl">
                    <span class="block">L'univers des</span>
                    <span class="block text-indigo-600">Critiques Littéraires</span>
                </h1>
                <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
                    Découvrez les livres qui font vibrer notre communauté et partagez vos impressions
                </p>
                
                {% if app.user %}
                    <div class="mt-6">
                        <a href="{{ path('app_announce_new') }}" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
                            <span class="material-icons mr-2">add_circle</span>
                            Créer une annonce
                        </a>
                    </div>
                {% else %}
                    <div class="mt-6">
                        <a href="{{ path('app_login') }}" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
                            <span class="material-icons mr-2">login</span>
                            Se connecter pour participer
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Contenu principal -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <!-- Section des critiques -->
        <div class="space-y-10">
            <div class="flex items-center justify-between">
                <h2 class="text-2xl font-bold text-gray-900">Critiques en vedette</h2>
                <div class="flex space-x-2">
                    <button class="hidden sm:flex items-center px-3 py-1.5 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
                        <span class="material-icons text-sm mr-1">trending_up</span>
                        Populaires
                    </button>
                    <button class="hidden sm:flex items-center px-3 py-1.5 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
                        <span class="material-icons text-sm mr-1">new_releases</span>
                        Récentes
                    </button>
                </div>
            </div>

            <!-- Grille de critiques -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {% for announce in pagination %}
                    <article class="relative flex flex-col bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
                        <!-- Badge éventuel de popularité -->
                        {% if announce.comments|length > 5 or like_info[announce.id].count > 10 %}
                            <div class="absolute top-3 left-3 z-10">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                                    <span class="material-icons text-xs mr-1">whatshot</span>
                                    Populaire
                                </span>
                            </div>
                        {% endif %}
                        
                        <!-- Menu d'actions -->
                        {% if app.user and app.user.id != announce.user.id %}
                            <div class="absolute top-3 right-3 z-10">
                                <div class="relative">
                                    <button onclick="toggleDropdown({{ announce.id }})" class="bg-white/80 backdrop-blur-sm rounded-full p-2 shadow-sm hover:bg-white transition-all duration-200 text-gray-700 hover:text-indigo-600">
                                        <span class="material-icons text-sm">more_horiz</span>
                                    </button>

                                    <!-- Menu déroulant -->
                                    <div id="dropdown-{{ announce.id }}" class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 z-10">
                                        {% set statut = user_statuses[announce.user.id] ?? null %}
                                        
                                        {% if statut is null or statut != 'Friend' %}
                                            <a href="{{ path('app_statut', {id: announce.user.id, statut: 'Friend'}) }}" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                                <span class="material-icons text-gray-500 mr-2 text-sm">person_add</span>
                                                <span>Ajouter en amis</span>
                                            </a>
                                        {% else %}
                                            <a href="{{ path('app_statut', {id: announce.user.id, statut: 'Unfriend'}) }}" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                                <span class="material-icons text-gray-500 mr-2 text-sm">person_remove</span>
                                                <span>Retirer des amis</span>
                                            </a>
                                        {% endif %}
                                        
                                        {% if statut is null or statut != 'Blocked' %}
                                            <a href="{{ path('app_statut', {id: announce.user.id, statut: 'Blocked'}) }}" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                                <span class="material-icons text-gray-500 mr-2 text-sm">block</span>
                                                <span>Bloquer</span>
                                            </a>
                                        {% else %}
                                            <a href="{{ path('app_statut', {id: announce.user.id, statut: 'Unblocked'}) }}" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                                <span class="material-icons text-gray-500 mr-2 text-sm">restart_alt</span>
                                                <span>Débloquer</span>
                                            </a>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                        
                        <!-- Image de couverture -->
                        <div class="relative aspect-[3/2] overflow-hidden bg-gradient-to-r from-gray-100 to-gray-200">
                            {% if vich_uploader_asset(announce, 'thumbnailFile') %}
                                <img src="{{ vich_uploader_asset(announce, 'thumbnailFile') }}" 
                                     alt="Couverture du livre {{ announce.book.title }}" 
                                     class="w-full h-full object-cover transition-transform duration-700 hover:scale-105" 
                                     loading="lazy">
                            {% else %}
                                <div class="w-full h-full flex items-center justify-center">
                                    <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewbox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                                    </svg>
                                </div>
                            {% endif %}

                            <!-- Indicateur de notation -->
                            <div class="absolute bottom-3 right-3">
                                <div class="flex items-center space-x-1 px-2 py-1 bg-white/90 backdrop-blur-sm rounded-md shadow-sm">
                                    {% for i in 1..5 %}
                                        {% if i <= announce.rate %}
                                            <svg class="w-4 h-4 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24" fill="currentColor">
                                                <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd"/>
                                            </svg>
                                        {% else %}
                                            <svg class="w-4 h-4 text-gray-300" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
                                            </svg>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                        
                        <!-- Contenu de la critique -->
                        <div class="flex flex-col flex-grow p-5 space-y-4">
                            <!-- Titre et info auteur -->
                            <div class="space-y-3">
                                <h3 class="text-xl font-bold text-gray-900 line-clamp-2">{{ announce.book.title }}</h3>
                                <!-- Auteur de la critique -->
                                <div class="flex items-center">
                                    <div class="flex-shrink-0">
                                        <span class="inline-flex items-center justify-center h-8 w-8 rounded-full bg-indigo-100">
                                            {% if announce.user.profilePicture %}
                                    {# <img src="{{ vich_uploader_asset(app.user, 'photoFile') }}" alt="Photo de profil" class="h-full w-full object-cover"> #}
                                {% else %}
                                    <span class="text-sm font-bold leading-none text-white">
                                        {{ announce.user.pseudo|slice(0, 1)|upper }}
                                    </span>
                                {% endif %}
                                        </span>
                                    </div>
                                    <div class="ml-3">
                                        <p class="text-sm font-medium text-gray-900">{{ announce.user.pseudo }}</p>
                                        <p class="text-xs text-gray-500">{{ announce.createdAt ? announce.createdAt|date('d/m/Y') : '' }}</p>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Contenu de la critique -->
                            <div>
                                <p class="text-gray-600 line-clamp-3">{{ announce.content }}</p>
                                <a href="{{ path('app_announce_show', {'id': announce.id}) }}" class="mt-2 inline-flex items-center text-sm font-medium text-indigo-600 hover:text-indigo-500">
                                    Lire la suite
                                    <span class="ml-1 material-icons text-sm">arrow_forward</span>
                                </a>
                            </div>
                            
                            <!-- Statistiques et actions -->
                            <div class="flex items-center justify-between mt-4 pt-4 border-t border-gray-100">
                                <div class="flex items-center space-x-4">
                                    <!-- Compteur de commentaires -->
                                    <button onclick="toggleComments_{{ announce.id }}()" class="flex items-center text-sm text-gray-500 hover:text-gray-700">
                                        <span class="material-icons text-gray-400 mr-1 text-sm">comment</span>
                                        <span>{{ announce.comments|length }}</span>
                                    </button>
                                    
                                    <!-- Bouton Like -->
                                    <a href="{{ path('app_announce_like', {'id': announce.id}) }}" 
                                       class="flex items-center text-sm 
                                       {% if like_info[announce.id].hasLiked %}
                                           text-indigo-600 hover:text-indigo-700
                                       {% else %}
                                           text-gray-500 hover:text-gray-700
                                       {% endif %}">
                                        <span class="material-icons mr-1 text-sm">
                                            {% if like_info[announce.id].hasLiked %}favorite{% else %}favorite_border{% endif %}
                                        </span>
                                        <span>{{ like_info[announce.id].count }}</span>
                                    </a>
                                </div>
                                
                                <!-- Bouton partager (optionnel) -->
                                <button class="inline-flex items-center text-sm text-gray-500 hover:text-gray-700">
                                    <span class="material-icons text-sm">share</span>
                                </button>
                            </div>
                            
                            <!-- Section commentaires (cachée par défaut) -->
                            <div id="comments_{{ announce.id }}" class="hidden space-y-3 border-t border-gray-100 pt-4 mt-4">
                                <h4 class="text-sm font-medium text-gray-900">Commentaires</h4>
                                
                                {% if announce.comments|length > 0 %}
                                    <div class="space-y-3 max-h-60 overflow-y-auto pr-2">
                                        {% for comment in announce.comments %}
                                            <div class="bg-gray-50 rounded-lg p-3">
                                                <div class="flex items-start space-x-3">
                                                    <div class="flex-shrink-0">
                                                        <span class="inline-flex items-center justify-center h-6 w-6 rounded-full bg-indigo-100">
                                                            <span class="text-xs font-medium leading-none text-indigo-700">
                                                                {{ comment.user.pseudo|slice(0, 1)|upper }}
                                                            </span>
                                                        </span>
                                                    </div>
                                                    <div class="min-w-0 flex-1">
                                                        <div class="flex items-center justify-between">
                                                            <p class="text-sm font-medium text-gray-900">
                                                                {{ comment.user.pseudo }}
                                                            </p>
                                                            <p class="text-xs text-gray-500">
                                                                {{ comment.createdAt ? comment.createdAt|date('d/m/Y') : '' }}
                                                            </p>
                                                        </div>
                                                        <p class="text-sm text-gray-600 mt-1">
                                                            {{ comment.content }}
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                    
                                    {% if announce.comments|length > 3 %}
                                        <a href="{{ path('app_announce_show', {'id': announce.id}) }}" class="text-xs text-center block text-indigo-600 hover:text-indigo-900">
                                            Voir tous les commentaires ({{ announce.comments|length }})
                                        </a>
                                    {% endif %}
                                {% else %}
                                    <p class="text-sm text-gray-500 text-center py-2">
                                        Aucun commentaire pour le moment
                                    </p>
                                {% endif %}
                                
                                <!-- Formulaire de commentaire -->
                                {% if app.user %}
                                    {{ form_start(comment_forms[announce.id], {'attr': {'class': 'mt-3'}}) }}
                                    <div class="flex items-start space-x-3">
                                        <div class="flex-shrink-0">
                                            <span class="inline-flex items-center justify-center h-8 w-8 rounded-full bg-indigo-100">
                                                <span class="text-sm font-medium leading-none text-indigo-700">
                                                    {{ app.user.pseudo|slice(0, 1)|upper }}
                                                </span>
                                            </span>
                                        </div>
                                        <div class="min-w-0 flex-1">
                                            {{ form_widget(comment_forms[announce.id].content, {
                                                'attr': {
                                                    'class': 'block w-full text-sm border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500',
                                                    'placeholder': 'Ajouter un commentaire...',
                                                    'rows': 2
                                                }
                                            }) }}
                                            <div class="mt-2 flex justify-end">
                                                <button type="submit" class="inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-1 focus:ring-indigo-500">
                                                    Publier
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                    {{ form_end(comment_forms[announce.id]) }}
                                {% else %}
                                    <div class="mt-2 text-center p-3 bg-gray-50 rounded-md">
                                        <p class="text-sm text-gray-600">
                                            <a href="{{ path('app_login') }}" class="text-indigo-600 hover:text-indigo-800 font-medium">Connectez-vous</a> pour ajouter un commentaire
                                        </p>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </article>
                {% endfor %}
            </div>
            
            <!-- Pagination -->
            <div class="mt-10">
                {{ knp_pagination_render(pagination, 'pagination/custom_pagination.html.twig') }}
            </div>
        </div>
    </div>
</div>

{% block javascripts %}
<script>
    {% for announce in pagination %}
    // Fonction pour ouvrir et fermer la section des commentaires
    function toggleComments_{{ announce.id }}() {
        const commentsDiv = document.getElementById('comments_{{ announce.id }}');
        commentsDiv.classList.toggle('hidden');
    }
    {% endfor %}

    // Fonction pour gérer les menus déroulants
    function toggleDropdown(announceId) {
        // Fermer tous les autres menus
        document.querySelectorAll('[id^="dropdown-"]').forEach(dropdown => {
            if (dropdown.id !== `dropdown-${announceId}`) {
                dropdown.classList.add('hidden');
            }
        });
        
        // Basculer l'état du menu actuel
        const dropdown = document.getElementById(`dropdown-${announceId}`);
        dropdown.classList.toggle('hidden');
    }

    // Fermer tous les menus quand on clique ailleurs sur la page
    document.addEventListener('click', function(event) {
        if (!event.target.closest('button[onclick^="toggleDropdown"]')) {
            document.querySelectorAll('[id^="dropdown-"]').forEach(dropdown => {
                dropdown.classList.add('hidden');
            });
        }
    });
</script>
{% endblock %}
{% endblock %}
