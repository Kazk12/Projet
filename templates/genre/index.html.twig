{% extends 'base.html.twig' %}

{% block title %}Genres littéraires{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8 text-gray-800">Genres littéraires</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="bg-{{ label == 'success' ? 'green' : 'red' }}-100 border-l-4 border-{{ label == 'success' ? 'green' : 'red' }}-500 text-{{ label == 'success' ? 'green' : 'red' }}-700 p-4 mb-4 rounded shadow" role="alert">
                <p>{{ message }}</p>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for genre in genres %}
            <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
                <div class="p-6">
                    <h2 class="text-xl font-semibold text-gray-800 mb-2">{{ genre.name }}</h2>
                    <p class="text-gray-600 mb-4">{{ genre.description }}</p>
                    
                    <div class="flex justify-end">
                        {% if app.user %}
                            <form action="{{ path('app_genre_toggle_like', {'id': genre.id}) }}" method="post">
                                <button type="submit" class="inline-flex items-center px-4 py-2 {% if userGenreLikes[genre.id] is defined and userGenreLikes[genre.id] %}bg-indigo-600 text-white{% else %}border border-indigo-600 text-indigo-600{% endif %} rounded-md hover:{% if userGenreLikes[genre.id] is defined and userGenreLikes[genre.id] %}bg-indigo-700{% else %}bg-indigo-50{% endif %} transition-colors duration-300">
                                    <span class="material-icons text-sm mr-1">{% if userGenreLikes[genre.id] is defined and userGenreLikes[genre.id] %}favorite{% else %}favorite_border{% endif %}</span>
                                    <span>{% if userGenreLikes[genre.id] is defined and userGenreLikes[genre.id] %}Aimé{% else %}Aimer{% endif %}</span>
                                </button>
                            </form>
                        {% else %}
                            <a href="{{ path('app_login') }}" class="inline-flex items-center px-4 py-2 border border-indigo-600 text-indigo-600 rounded-md hover:bg-indigo-50 transition-colors duration-300">
                                <span class="material-icons text-sm mr-1">favorite_border</span>
                                <span>Connectez-vous pour aimer</span>
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-span-3 text-center py-10 text-gray-500">
                <p>Aucun genre littéraire n'a été trouvé.</p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
