{% if app.user.id == message.author.id %}
    {# Message envoyé par l'utilisateur actuel - aligné à droite #}
    <div class="flex justify-end mb-2" data-message-id="{{ message.id }}">
        <p class="bg-indigo-600 dark:bg-indigo-700 text-white rounded-lg py-2 px-3 max-w-xs md:max-w-md text-sm transition-colors duration-300" 
           title="{{ message.createdAt|date('d/m/Y H:i') }}">
            {{ message.content }}
        </p>
    </div>
{% else %}
    {# Message reçu - aligné à gauche #}
    <div class="flex justify-start mb-2" data-message-id="{{ message.id }}">
        <p class="bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-lg py-2 px-3 max-w-xs md:max-w-md text-sm transition-colors duration-300"
           title="{{ message.createdAt|date('d/m/Y H:i') }}">
            {{ message.content }}
        </p>
    </div>
{% endif %}