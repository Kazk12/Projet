
{% if app.user.id == message.author.id %}
    {# Message envoyé par l'utilisateur actuel - aligné à droite #}
    <div class="flex justify-end mb-2">
        <p class="bg-indigo-600 text-white rounded-lg py-2 px-3 max-w-xs md:max-w-md text-sm" 
           title="{{ message.createdAt|date('d/m/Y H:i') }}">
            {{ message.content }}
        </p>
    </div>
{% else %}
    {# Message reçu - aligné à gauche #}
    <div class="flex justify-start mb-2">
        <p class="bg-gray-700 text-white rounded-lg py-2 px-3 max-w-xs md:max-w-md text-sm"
           title="{{ message.createdAt|date('d/m/Y H:i') }}">
            {{ message.content }}
        </p>
    </div>
{% endif %}